{{>layout/header}} <!-- >는 현재 머스테치 파일을 기준으로 다른 파일을 가져옴. -->

<!-- bradcam_area  -->
<div class="bradcam_area bradcam_bg_3">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="bradcam_text">
                    <h3>회원 가입</h3>
                </div>
            </div>
        </div>
    </div>
</div>
<!--/ bradcam_area  -->

<!-- apply_form_area -->
<div class="apply_form_area">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <form action="#" class="apply_form">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="apply_info_text text-center">
                                <h3>회원가입</h3>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="single_field">
                                <input id="id" type="text" placeholder="아이디">
                            </div>
                        </div>
                        <div class="single_field">
                            <button id="checkId" class="genric-btn info-border">중복확인</button>
                        </div>
                        <div class="col-md-12">
                            <div class="single_field">
                                <input id="password" type="text" placeholder="비밀번호 입력">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="single_field">
                                <input type="text" placeholder="비밀번호 확인">
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="single_field">
                                <input id="name" type="text" placeholder="이름">
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="single_field">
                                <input id="phone" type="text" placeholder="폰 번호">
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="single_field">
                                <input id="email" type="text" placeholder="이메일 주소">
                            </div>
                        </div>
                        <div class="single_field">
                            <a href="#" class="genric-btn info-border">인증 번호</a>
                        </div>
                        <div class="col-md-9">
                            <div class="single_field">
                                <input type="text" placeholder="인증 번호">
                            </div>
                        </div>
                        <div class="single_field">
                            <a href="#" class="genric-btn info-border">확인</a>
                        </div>
                        <div class="col-md-12">
                            <div class="submit_btn">
                                <button id="joinBtn" class="boxed-btn3" type="submit">가입</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!--/ apply_form_area -->


{{>layout/footer}} <!-- >는 현재 머스테치 파일을 기준으로 다른 파일을 가져옴. -->